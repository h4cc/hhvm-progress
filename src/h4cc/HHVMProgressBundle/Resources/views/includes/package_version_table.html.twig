{% if packages.count %}

    <div class="pull-right">
        {{ knp_pagination_render(packages) }}
    </div>

    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
        {% for package in packages %}
            {% if package.package is defined %}
                {% set info = package.package %}
            {% else %}
                {% set info = package %}
            {% endif %}
            <tr>
                <td>
                    <a href="https://packagist.org/packages/{{ info.name }}" class="pull-right">
                        <img src="{{ asset('images/packagist.ico') }}" alt="{{ info.name }} on Packagist"/>
                    </a>
                    <a href="{{ path('h4cc_hhvm_progress_packages_show', {'name': info.name}) }}">
                        {{ info.name }}
                    </a>
                </td>
                <td>{{ info.description }}</td>
            </tr>
        {% endfor %}
    </table>

    <div class="pull-right">
        {{ knp_pagination_render(packages) }}
    </div>

    <br style="clear: both"/>

{% else %}

    <p>No packages to show :(</p>

{% endif %}